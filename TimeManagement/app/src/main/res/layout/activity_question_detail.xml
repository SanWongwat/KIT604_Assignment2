<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include
        layout="@layout/tool_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <assignment2.kit607.timemanagement.ListViewForScrollView
                android:id="@+id/question_detail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"></assignment2.kit607.timemanagement.ListViewForScrollView>

            <Button
                android:id="@+id/question_submit_button"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Submit"/>

        </LinearLayout>
    </ScrollView>

</LinearLayout>